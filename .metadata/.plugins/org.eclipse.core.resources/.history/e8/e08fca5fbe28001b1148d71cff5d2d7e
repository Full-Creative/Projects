package com.readtime;

import java.io.BufferedReader;
import java.io.IOException;
import java.io.PrintWriter;

import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import com.google.gson.Gson;
import com.google.gson.JsonObject;

@WebServlet(name = "TimeResult", urlPatterns = { "/result" })
public class TimeResult extends HttpServlet {
	@Override
	protected void doPost(HttpServletRequest req, HttpServletResponse resp) throws IOException {
		StringBuilder buffer = new StringBuilder();
		int count;
		double minutes;
		BufferedReader reader = req.getReader();
		String line;
		while ((line = reader.readLine()) != null) {
			buffer.append(line);
			buffer.append("\n");
		}
		String data = buffer.toString();
		Data obj = new Gson().fromJson(data, Data.class);
		ReadTimeFactory readTime = new ReadTimeFactory();

		count = new WordCounter().countWords(obj.getText());
		minutes = readTime.getReadTime(obj.getType()).calculateTime(count);

		System.out.println("Number of words in text file " + count);
		System.out.println("Read time of" + obj.getType() + " person " + minutes + " Minutes");
		obj.setMinutes(minutes);
		/*
		 * System.out.println(obj.getText()); System.out.println(obj.getType());
		 * System.out.println(obj.getMinutes()); resp.setContentType("text/html");
		 * PrintWriter printWriter = resp.getWriter(); printWriter.print("<html>");
		 * printWriter.print("<body>"); printWriter.print("<h1>Read time</h1>");
		 * printWriter.print("<p>Number of words in text file " + count + "</p>");
		 * printWriter.print("<p> " + "Read time of average person " +
		 * readTime.getReadTime(obj.getType()).calculateTime(count) + " Minutes</p>");
		 * printWriter.print("</body>"); printWriter.print("</html>");
		 * printWriter.close();
		 * 
		 */

	}
}
