package com.readtime;

import java.io.BufferedReader;
import java.io.IOException;

import javax.servlet.http.HttpServletRequest;

import com.google.gson.Gson;

public class Serializer {
	public String RequestToJson(HttpServletRequest req) throws IOException {
		StringBuilder buffer = new StringBuilder();
		BufferedReader reader = req.getReader();
		String line;
		while ((line = reader.readLine()) != null) {
			buffer.append(line);
		}
		return buffer.toString();
	}
	public UserData RequestToJavaObject(HttpServletRequest req) throws IOException {
		String javaString=RequestToJson(req);
		UserData data = new Gson().fromJson(javaString, UserData.class);
		return data;
	}
	public String JavaObjectToJson(UserData data)
	{
		return new Gson().toJson(data);
	}
}
